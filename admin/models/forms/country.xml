<?xml version="1.0" encoding="utf-8"?>
<form
	addrulepath="/administrator/components/com_realestatenow/models/rules"
	addfieldpath="/administrator/components/com_realestatenow/models/fields"
>
	<fieldset name="details">
                <!-- [Fields 736] Default Fields.-->
                <!-- [Fields 737] Id Field. Type: Text (joomla)-->
                <field name="id"
                       type="text"
                       class="readonly"
                       readonly="true"
                       label="JGLOBAL_FIELD_ID_LABEL"
                       description="JGLOBAL_FIELD_ID_DESC"
                       size="10"
                       default="0" />
                <!-- [Fields 769] Date Created Field. Type: Calendar (joomla)-->
                <field name="created"
                       type="calendar"
                       label="COM_REALESTATENOW_COUNTRY_CREATED_DATE_LABEL"
                       description="COM_REALESTATENOW_COUNTRY_CREATED_DATE_DESC"
                       size="22"
                       format="%Y-%m-%d %H:%M:%S"
                       filter="user_utc" />
                <!-- [Fields 785] User Created Field. Type: User (joomla)-->
                <field name="created_by"
                       type="user"
                       label="COM_REALESTATENOW_COUNTRY_CREATED_BY_LABEL"
                       description="COM_REALESTATENOW_COUNTRY_CREATED_BY_DESC" />
                <!-- [Fields 800] Published Field. Type: List (joomla)-->
                <field name="published"
                       type="list"
                       label="JSTATUS">
                        <option value="1">JPUBLISHED</option>
                        <option value="0">JUNPUBLISHED</option>
                        <option value="2">JARCHIVED</option>
                        <option value="-2">JTRASHED</option>
                </field>
                <!-- [Fields 826] Date Modified Field. Type: Calendar (joomla)-->
                <field name="modified"
                       type="calendar"
                       class="readonly"
                       label="COM_REALESTATENOW_COUNTRY_MODIFIED_DATE_LABEL"
                       description="COM_REALESTATENOW_COUNTRY_MODIFIED_DATE_DESC"
                       size="22"
                       readonly="true"
                       format="%Y-%m-%d %H:%M:%S"
                       filter="user_utc" />
                <!-- [Fields 844] User Modified Field. Type: User (joomla)-->
                <field name="modified_by"
                       type="user"
                       label="COM_REALESTATENOW_COUNTRY_MODIFIED_BY_LABEL"
                       description="COM_REALESTATENOW_COUNTRY_MODIFIED_BY_DESC"
                       class="readonly"
                       readonly="true"
                       filter="unset" />
                <!-- [Fields 862] Access Field. Type: Accesslevel (joomla)-->
                <field name="access"
                       type="accesslevel"
                       label="JFIELD_ACCESS_LABEL"
                       description="JFIELD_ACCESS_DESC"
                       default="1"
                       required="false" />
                <!-- [Fields 882] Ordering Field. Type: Numbers (joomla)-->
                <field name="ordering"
                       type="number"
                       class="inputbox validate-ordering"
                       label="COM_REALESTATENOW_COUNTRY_ORDERING_LABEL"
                       description=""
                       default="0"
                       size="6"
                       required="false" />
                <!-- [Fields 901] Version Field. Type: Text (joomla)-->
                <field name="version"
                       type="text"
                       class="readonly"
                       label="COM_REALESTATENOW_COUNTRY_VERSION_LABEL"
                       description="COM_REALESTATENOW_COUNTRY_VERSION_DESC"
                       size="6"
                       readonly="true"
                       filter="unset" />
                <!-- [Fields 919] Metakey Field. Type: Textarea (joomla)-->
                <field name="metakey"
                       type="textarea"
                       label="JFIELD_META_KEYWORDS_LABEL"
                       description="JFIELD_META_KEYWORDS_DESC"
                       rows="3"
                       cols="30" />
                <!-- [Fields 928] Metadesc Field. Type: Textarea (joomla)-->
                <field name="metadesc"
                       type="textarea"
                       label="JFIELD_META_DESCRIPTION_LABEL"
                       description="JFIELD_META_DESCRIPTION_DESC"
                       rows="3"
                       cols="30" />
                <!-- [Fields 937] Dynamic Fields.-->
                <!-- [Fields 1657] Name Field. Type: Text. (joomla)-->
                <field type="text"
                       name="name"
                       label="COM_REALESTATENOW_COUNTRY_NAME_LABEL"
                       size="10"
                       maxlength="50"
                       default=""
                       description="COM_REALESTATENOW_COUNTRY_NAME_DESCRIPTION"
                       class="text_area"
                       readonly="false"
                       disabled="false"
                       required="false"
                       filter="STRING"
                       message="COM_REALESTATENOW_COUNTRY_NAME_MESSAGE"
                       hint="COM_REALESTATENOW_COUNTRY_NAME_HINT" />
                <!-- [Fields 1657] Alias Field. Type: Text. (joomla)-->
                <field type="text"
                       name="alias"
                       label="COM_REALESTATENOW_COUNTRY_ALIAS_LABEL"
                       description="JFIELD_ALIAS_DESC"
                       filter="STRING"
                       hint="COM_REALESTATENOW_COUNTRY_ALIAS_HINT" />
                <!-- [Fields 1657] Longitude Field. Type: Text. (joomla)-->
                <field type="text"
                       name="longitude"
                       label="COM_REALESTATENOW_COUNTRY_LONGITUDE_LABEL"
                       size="40"
                       maxlength="150"
                       description="COM_REALESTATENOW_COUNTRY_LONGITUDE_DESCRIPTION"
                       class="text_area"
                       readonly="false"
                       disabled="false"
                       required="false"
                       filter="STRING"
                       message="COM_REALESTATENOW_COUNTRY_LONGITUDE_MESSAGE"
                       hint="COM_REALESTATENOW_COUNTRY_LONGITUDE_HINT" />
                <!-- [Fields 1657] Latitude Field. Type: Text. (joomla)-->
                <field type="text"
                       name="latitude"
                       label="COM_REALESTATENOW_COUNTRY_LATITUDE_LABEL"
                       size="40"
                       maxlength="150"
                       description="COM_REALESTATENOW_COUNTRY_LATITUDE_DESCRIPTION"
                       class="text_area"
                       readonly="false"
                       disabled="false"
                       required="false"
                       filter="STRING"
                       message="COM_REALESTATENOW_COUNTRY_LATITUDE_MESSAGE"
                       hint="COM_REALESTATENOW_COUNTRY_LATITUDE_HINT" />
                <!-- [Fields 1577] Owncoords Field. Type: Radio. (joomla)-->
                <field type="radio"
                       name="owncoords"
                       label="COM_REALESTATENOW_COUNTRY_OWNCOORDS_LABEL"
                       class="btn-group btn-group-yesno"
                       default="0">
                        <!-- [Fields 1587] Option Set.-->
                        <option value="1">COM_REALESTATENOW_COUNTRY_YES</option>
                        <option value="0">COM_REALESTATENOW_COUNTRY_NO</option>
                </field>
                <!-- [Fields 1657] Description Field. Type: Editor. (joomla)-->
                <field type="editor"
                       name="description"
                       label="COM_REALESTATENOW_COUNTRY_DESCRIPTION_LABEL"
                       width="100%"
                       height="500"
                       cols="13"
                       rows="50"
                       buttons="false"
                       filter="safehtml" />
                <!-- [Fields 1657] Image Field. Type: Media. (joomla)-->
                <field type="media"
                       name="image"
                       label="COM_REALESTATENOW_COUNTRY_IMAGE_LABEL"
                       directory="realestatenow/countries/"
                       preview="true" />
                <!-- [Fields 946] Metadata Fields-->
                <fields name="metadata"
                        label="JGLOBAL_FIELDSET_METADATA_OPTIONS">
                        <fieldset name="vdmmetadata"
                                  label="JGLOBAL_FIELDSET_METADATA_OPTIONS">
                                <!-- [Fields 954] Robots Field. Type: List (joomla)-->
                                <field name="robots"
                                       type="list"
                                       label="JFIELD_METADATA_ROBOTS_LABEL"
                                       description="JFIELD_METADATA_ROBOTS_DESC">
                                        <option value="">JGLOBAL_USE_GLOBAL</option>
                                        <option value="index, follow">JGLOBAL_INDEX_FOLLOW</option>
                                        <option value="noindex, follow">JGLOBAL_NOINDEX_FOLLOW</option>
                                        <option value="index, nofollow">JGLOBAL_INDEX_NOFOLLOW</option>
                                        <option value="noindex, nofollow">JGLOBAL_NOINDEX_NOFOLLOW</option>
                                </field>
                                <!-- [Fields 979] Author Field. Type: Text (joomla)-->
                                <field name="author"
                                       type="text"
                                       label="JAUTHOR"
                                       description="JFIELD_METADATA_AUTHOR_DESC"
                                       size="20" />
                                <!-- [Fields 992] Rights Field. Type: Textarea (joomla)-->
                                <field name="rights"
                                       type="textarea"
                                       label="JFIELD_META_RIGHTS_LABEL"
                                       description="JFIELD_META_RIGHTS_DESC"
                                       required="false"
                                       filter="string"
                                       cols="30"
                                       rows="2" />
                        </fieldset>
                </fields>
        </fieldset>
	
	<!-- [Interpretation 11689] Access Control Fields. -->
	<fieldset name="accesscontrol">
		<!-- [Interpretation 11691] Asset Id Field. Type: Hidden (joomla) -->
		<field
			name="asset_id"
			type="hidden"
			filter="unset"
		/>
		<!-- [Interpretation 11697] Rules Field. Type: Rules (joomla) -->
		<field
			name="rules"
			type="rules"
			label="Permissions in relation to this country"
			translate_label="false"
			filter="rules"
			validate="rules"
			class="inputbox"
			component="com_realestatenow"
			section="country"
		/>
	</fieldset>
</form>